<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>
            <div>
                <h2>Menu</h2>
                <% if (burgers.length> 0) { %>
                    <% burgers.forEach(burger=> { %>

                        <h3>
                            <%= burger.name %>
                        </h3>
                        <p>
                            <%= burger.ingredients %>
                        </p>
                        <p>
                            <%= burger.price %>
                        </p>
                        <% }) %>
                            <% } else { %>
                                <p>There are no burgers to display...</p>
                                <% } %>
            </div>
            <%- include("./partials/footer.ejs") %>
    </body>

</html>