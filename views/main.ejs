<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="main-container">
                <h2 class="main-title">Menu</h2>
                <% if (burgers.length> 0) { %>
                    <% burgers.forEach(burger=> { %>
                        <a href="/burgers/<%= burger._id %>">
                            <img width="300px"
                                src="https://cdn.openart.ai/uploads/image_random_0SzXIX0m_1668380639708_1024.webp"
                                alt="">
                        </a>

                        <h3>
                            <%= burger.name %>
                        </h3>
                        <div style='display: flex;'>
                            <p>
                                Ingredients:
                            </p>
                            <p>
                                <%= burger.ingredients %>
                            </p>
                        </div>
                        <div style='display: flex;'>
                            <p>
                                Price:
                            </p>
                            <p>
                                <%= burger.price %> z≈Ç
                            </p>
                        </div>
                        <hr style="width: 60%; margin-bottom: 20px;">
                        <% }) %>
                            <% } else { %>
                                <p>There are no burgers to display...</p>
                                <% } %>
            </div>

            <%- include("./partials/footer.ejs") %>
    </body>

</html>